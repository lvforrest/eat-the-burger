
    <div class="container">	
	<div class="jumbotron"> 
		<img src="./assets/images/krabbypatty.jpg" width="200px" height="200px"> 
		<h1> EAT DA BURGER! </h1>
	</div>

	<div class="row">
		<div class="col-md-4 col-md-offset-1">
			<div class="panel-panel default">
				<ul class="list-group">
				{{#each burger_data}}
					{{#unless this.devoured}}
					<li class="list-group-item">
						<div class="input-group">
							<p class="lead"> {{this.burger_name}} </p>
							<span class="input-group-btn">
								<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="btn btn-danger btn-lg" type="submit"><img src="./assets/images/devour.jpg" width="45px" height="45px"> <strong> DEVOUR IT!</strong></button>
								</form>
							</span>
						</div>
					</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
	</div>


	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<div class="panel panel-default">
				<ul class="list-group">
				{{#each burger_data}}
					{{#if this.devoured}}
					<li class="list-group-item">
						<span class="input-group-btn">
							<p class="lead">{{this.burger_name}} </p>
							<button class="btn btn-danger btn-lg" type="submit">Delete</button>
					</span>
					</li>
					{{/if}}
				{{/each}}
				</ul>
			</div>
		</div>
	</div>

	<div class="col-md-10 col-md-offset-1">
		<p class="lead"> <strong> Enter the name of the burger you want to eat and click "Yummy".</strong>  </p>

		<form class="create-update-form" action="burgers/create" method="POST">

			<div class="form-group">
				<textarea class="form-control input-lg" type="text" name="burger_name" rows="3"> </textarea>
			</div>

			<button class="btn btn-default btn-lg" type="submit"><img src="./assets/images/yummy.jpg"width="25px" height="25px"><strong>Yummy!</strong></button>
		</form>
	</div>
</div>

